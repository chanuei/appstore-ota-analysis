<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:layout_marginBottom="45dp">
     <RelativeLayout
        android:id="@+id/rl_daohang"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#d000"
       android:gravity="center_vertical">
        
        <TextView
            android:text="个性"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           
        />
        <ImageView
            android:id="@+id/daohang_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu_search"
        />
        
    </RelativeLayout>
    
<LinearLayout
    android:id="@+id/ll_mp3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="#62B1FF">

       <ImageView
           
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:layout_weight="2" />
    
    <TextView
        android:text="铃声"
        android:textSize="40sp"
        android:textColor="#D5FFF9"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center"
    />
   
</LinearLayout>
<LinearLayout
    android:id="@+id/ll_mp4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_weight="1"
    android:background="#FFF69A"
>
     <TextView
        android:text="视频"
        android:textSize="40sp"
        android:textColor="#D5FFF9"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center"
    />
     <ImageView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
    />
   
   
</LinearLayout>
<LinearLayout
    android:id="@+id/ll_jpg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_weight="1"
    android:background="#FFC59A"
>
     <ImageView
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
    />
    <TextView
        android:text="壁纸"
        android:textSize="40sp"
        android:textColor="#D5FFF9"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center"
    />
    
</LinearLayout>
<LinearLayout
    android:id="@+id/ll_txt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_weight="1"
    android:background="#66FF8D"
>
    
    <TextView
        android:text="电子书"
        android:singleLine="true"
        android:textSize="40sp"
        android:textColor="#D5FFF9"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center"
    />
    <ImageView
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
    />
</LinearLayout>



</LinearLayout>

























