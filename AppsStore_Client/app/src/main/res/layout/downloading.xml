<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginBottom="45dp"
    >
     <RelativeLayout
        android:id="@+id/rl_daohang"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#d000"
       android:gravity="center_vertical">
        
        <TextView
            android:text="下载"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           
        />
        <ImageView
            android:id="@+id/daohang_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu_search"
        />
    </RelativeLayout>
    
    <ScrollView
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
       

      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_cont1"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/download_his"
            android:text="下载任务"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            />

       
        
    </RelativeLayout>
     
     <ListView
         android:id="@+id/downloading_lv"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"/>
     
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_bottom"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/download_his_"
            android:text="下载历史(12)"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/clean_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="14sp"
            android:text="清空记录" />
        
    </RelativeLayout>
    <ListView
         android:id="@+id/downloaded_lv_his"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"/>
     </LinearLayout>
</ScrollView>

</LinearLayout>





